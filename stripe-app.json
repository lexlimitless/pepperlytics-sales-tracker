{
  "id": "com.pepperlytics.sales-tracker",
  "version": "2.0.0",
  "name": "Pepperlytics Data Connector",
  "icon": "icon.png",
  "permissions": [
    {
      "permission": "charge_read",
      "purpose": "Read payment data to sync with Pepperlytics analytics platform"
    },
    {
      "permission": "checkout_session_read",
      "purpose": "Access checkout session data for marketing attribution analysis"
    },
    {
      "permission": "customer_read",
      "purpose": "Read customer information for comprehensive sales analytics"
    },
    {
      "permission": "payment_intent_read",
      "purpose": "Access payment intent data for revenue tracking and attribution"
    }
  ],
  "webhooks": [
    {
      "url": "/webhook",
      "events": [
        "checkout.session.completed",
        "payment_intent.succeeded",
        "customer.created",
        "charge.succeeded"
      ]
    }
  ],
  "distribution_type": "private"
}